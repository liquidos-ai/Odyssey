  },
  memory: {
    provider: "file",
    path: ".odyssey/memory",
    capture: {
      capture_messages: true,
      capture_tool_output: false,
      detect_secrets: true,
      secret_entropy_threshold: 3.7,
    },
    compaction: {
      enabled: false,
      max_messages: 40,
      summary_max_chars: 1500,
    },
    instruction_roots: ["."],
