    enabled: true,
    mode: "workspace_write",
    filesystem: {
      allow_read: ["."],
      allow_write: ["."],
      deny_read: [],
      deny_write: [],
      allow_exec: [],
      deny_exec: [],
    },
    network: {
      allow_domains: [],
      deny_domains: [],
    },
    env: {
      allow: ["PATH"],
      deny: [],
      set: {},
    },
    limits: {
      cpu_seconds: 30,
      memory_bytes: 1073741824,
      nofile: 256,
      pids: 128,
    },
  },
  sessions: {
    enabled: true,
    path: ".odyssey/sessions",
  },
